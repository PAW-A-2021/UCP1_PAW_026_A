@model IEnumerable<UCP1_PAW_026_A.Models.Pelanggan>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                
                @Html.DisplayName("Nama Pelanggan")
            </th>
            <th>
               
                @Html.DisplayName("Alamat")
            </th>
            <th>
                
                @Html.DisplayName("Nomor Hp")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamaPelanggan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alamat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoHp)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPelanggan"><i class="fa fa-marker fa-lg"> </i></a> |
                <a asp-action="Details" asp-route-id="@item.IdPelanggan"><i class="fas fa-list"> </i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdPelanggan"><i class="fa fa-trash fa-lg"> </i></a>
            </td>
        </tr>
}
    </tbody>
</table>
